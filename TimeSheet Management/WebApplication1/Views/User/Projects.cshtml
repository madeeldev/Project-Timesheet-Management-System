@model TimeSheetManagement.ViewModels.ProjectListViewModel
@using WebApplication1.Data;
@{
    ViewData["Title"] = "Projects";
    Layout = "~/Views/Layouts/_PMLayout.cshtml";
}

<div style="margin-left:650px">
    <form asp-controller="User" asp-action="Index" method="get">
        <p>
            Name: <input type="text" asp-for="SearchString" />
            <input type="submit" value="Filter" />
        </p>
    </form>
</div>
<div class="col-md-12">
    <!-- Area Chart -->
    <div class="">
        <div class="card shadow mb-4 border-left-primary shadow h-100 py-2">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Projects</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <div class="">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        Project Name
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ProjectsList[0].Description)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ProjectsList[0].DateCreated)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ProjectsList)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateCreated, "{0:dd/MM/yyyy}", new { @class = "form-control" }) 
                                        </td>

                                        <td class="float-right">
                                            <a asp-action="ProductivityOfEmployee" class="btn btn-outline-primary btn-sm" asp-route-id="@item.ProjectId">Productivity</a>
                                            <a asp-action="AddProjectMember" class="btn btn-outline-primary btn-sm" asp-route-id="@item.ProjectId">Add Member</a>
                                            <a asp-action="ProjectMembers" class="btn btn-outline-success btn-sm" asp-route-id="@item.ProjectId">Member List</a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>