@model TimeSheetManagement.ViewModels.WorkspaceViewModel
@{
    ViewData["Title"] = "CreateWorkspace";
}


<div class="col-md-12">
    <!-- Area Chart -->
    <div class="">
        <div class="card shadow mb-4 border-left-primary shadow h-100 py-2">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Add Workspace</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <div class="col-md-6">
                    <div class="card-body">
                        <form asp-action="CreateWorkspace">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            @Html.ValidationMessage("CustomError", new { @class = "text-danger" })
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-success float-right" />
                            </div>
                        </form>
                    </div>
                </div>

                @*<div>
                        <a asp-action="Workspace" class="btn btn-outline-primary" style="margin-top:5px">Back to List</a>
                    </div>*@

            </div>
        </div>
    </div>
